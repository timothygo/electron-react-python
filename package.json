{
  "name": "electron-react-python",
  "version": "0.1.0",
  "author": {
    "name": "Timothy Go",
    "email": "timothyace.go@gmail.com",
    "url": "https://www.timothygo.me/"
  },
  "main": "public/electron.js",
  "homepage": "./",
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "electron-dev": "concurrently \"cross-env BROWSER=none npm start\" \"wait-on http://localhost:3000 && nodemon --exec \"\"electron .\"\"\"",
    "electron-rebuild": "./node_modules/.bin/electron-rebuild",
    "preelectron-pack": "npm run build",
    "electron-pack": "electron-builder build -w",
    "eject": "react-scripts eject"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^1.3.5",
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.3.2",
    "@testing-library/user-event": "^7.1.2",
    "electron-is-dev": "^1.1.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-icons": "^3.9.0",
    "react-redux": "^7.2.0",
    "react-router-dom": "^5.1.2",
    "react-scripts": "3.4.1",
    "react-spring": "^8.0.27",
    "redux-logger": "^3.0.6",
    "uuid": "^7.0.2",
    "zeromq": "^6.0.0-beta.5"
  },
  "devDependencies": {
    "concurrently": "^5.1.0",
    "cross-env": "^7.0.2",
    "electron": "^18.3.7",
    "electron-builder": "^22.4.1",
    "electron-rebuild": "^1.10.0",
    "node-sass": "^4.13.1",
    "nodemon": "^2.0.3",
    "wait-on": "^4.0.1"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "build": {
    "productName": "aaa",
    "appId": "com.aaa.aaa",
    "files": [
      "build/**/*"
    ],
    "directories": {
      "buildResources": "src/resources",
      "output": "release"
    },
    "extraResources": [
      "resources/**/*",
      "!resources/.gitignore",
      "!resources/python-code"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
